<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Existing Investments</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Your Investments</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Plan</th>
                    <th>Deposit Date</th>
                    <th>Deposit Amount (₹)</th>
                    <th>UTR/IMPS</th>
                </tr>
            </thead>
            <tbody>
                <% investments.forEach((investment, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= investment.plan %></td>
                        <td><%= investment.depositDate.toDateString() %></td>
                        <td>₹<%= investment.depositAmount.toLocaleString('en-IN') %></td>
                        <td><%= investment.utr %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/" class="btn btn-primary">Back to Investment Form</a>
    </div>
</body>
</html>