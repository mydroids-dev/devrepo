<!-- show all payments list here -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investments for Customer ID <%= customerId %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Investments for Customer ID: <%= customerId %></h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Deposit Date</th>
                    <th>Deposit Amount (₹)</th>
                    <th>UTR/IMPS</th>
                </tr>
            </thead>
            <tbody>
                <% investments.forEach(investment => { %>
                    <tr>
                        <td><%= investment.depositDate.toDateString() %></td>
                        <td>₹<%= investment.depositAmount.toLocaleString('en-IN') %></td>
                        <td><%= investment.utr %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/admin" class="btn btn-secondary">Back to Admin Dashboard</a>
    </div>
</body>
</html>