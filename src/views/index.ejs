                <li class="d-none d-lg-block">
                    <div class="cstm-top-login">
                        <button class="cstm-top-login-btn" onclick="toggleLoginDropdown()">Login</button>
                        <div class="cstm-top-login-btn-content" id="loginDropdown">
                            <a href="/login" id="customerLogin">
                                <span>Customer Login</span>
                            </a>
                            <a href="/associate/login" id="associateLogin">
                                <span>Associate Login</span>
                            </a>
