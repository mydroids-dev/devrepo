<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Existing Investments</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom styles */
        body {
            background-color: #f4f7f6;
        }

        .logo {
            width: 100px; /* Set a specific width */
            display: block; /* Ensure it centers properly */
            margin: 20px auto; /* Center the logo and add vertical spacing */
        }

        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }

        h1 {
            margin-bottom: 20px;
            color: #333;
            text-align: center; /* Center align the heading */
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="https://raw.githubusercontent.com/mydroids-dev/devrepo/main/public/logo.svg" alt="Logo" class="logo" />
        <h1>Your Investments</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Plan</th>
                    <th>Deposit Date</th>
                    <th>Deposit Amount (₹)</th>
                    <th>UTR/IMPS</th>
                </tr>
            </thead>
            <tbody>
                <% investments.forEach((investment, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= investment.plan %></td>
                        <td><%= investment.depositDate.toDateString() %></td>
                        <td>₹<%= investment.depositAmount.toLocaleString('en-IN') %></td>
                        <td><%= investment.utr %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/" class="btn btn-primary">Back to Investment Form</a>
    </div>
</body>
</html>
